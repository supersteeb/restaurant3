<p id="notice"><%= notice %></p>

<h1>Food Items</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
      <th><%= sortable "description" %></th>
      <th><%= sortable "price" %></th>
      <th><%#<%= link_to "Section", :sort => "%>Section Name<%#{}" %></th>
      <th>Cuisine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @food_items.each do |food_item| %>
      <tr>
        <td><%= link_to food_item.name, food_item_path(food_item) %></td>
        <td><%= food_item.description %></td>
        <td><%= food_item.price %></td>
        <td><%= food_item.section.name %></td>
        <td><%= food_item.cuisine_name %></td>
        <td><%= link_to 'Show', food_item %></td>
        <td><%= link_to 'Edit', edit_food_item_path(food_item) %></td>
        <td><%= link_to 'Destroy', food_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Food Item', new_food_item_path, class: 'btn btn-secondary' %>
<%= link_to 'Back to Menu', menu_path, class: "btn btn-info"%>  
