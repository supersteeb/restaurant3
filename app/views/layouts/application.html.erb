<!DOCTYPE html>
<html>
  <head>
    <title>Kaewphitak's</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
		<div class="container">

	  	<nav class="navbar navbar-light bg-faded">
	  		<%= link_to "Kaewphitak's Good Eats", root_path, class: 'navbar-brand' %>
			  <ul class="nav navbar-nav">
			    <li class="nav-item">
			    	<%= link_to 'Menu', menu_path, class: 'nav-link' %>
			    </li>
			    <li class="nav-item">
			      <%= link_to 'Contact us', contact_us_path, class: 'nav-link' %>
			    </li>

			  </ul>
			  <form action="/search" class="form-inline pull-xs-right">
			    <input class="form-control" type="text" placeholder="Search">
			    <button class="btn btn-outline-success" type="submit">Search</button>
			  </form>
			</nav>
	   	 
	   	<%= yield %>

   	</div>

  </body>
</html>
