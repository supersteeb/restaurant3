<!DOCTYPE html>
<html>
  <head>
    <title>Kaewphitak's</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
		<div class="container">

	  	<nav class="navbar navbar-light bg-faded">
	  		<%= link_to "Kaewphitak's Good Eats", root_path, class: 'navbar-brand' %>
			  <ul class="nav navbar-nav">
			    <li class="nav-item">
			    	<%= link_to 'Menu', menu_path, class: 'nav-link' %>
			    </li>
			    <li class="nav-item">
			      <%= link_to 'Contact us', contact_us_path, class: 'nav-link' %>
			    </li>
			    <li class="nav-item pull-xs-right" >
			    	<% if current_order == nil %>
			    	<% else %>
			    	
			    <%= current_order.order_food_items.size %> items in your cart. 
			    	<%= link_to 'Check Out', checkout_path, class: 'btn btn-primary btn-sm' %> <!-- Would take you to checkout page in which you can view cart... so. order food_items. show? -->
			    </li>
			  </ul>




			  <form class="form-inline pull-xs-right" action="/menu" method="GET">
			       <%= text_field_tag :search, params[:search], class: "form-control",placeholder: "Search" %>
			       <button class="btn btn-success-outline" type="submit">Search</button>
			  </form>
			</nav>

			<% if flash[:error] %>
				<div class="alert alert-danger"><%= flash[:error] %></div>
			<% end %>
			<% if flash[:success] %>
				<div class="alert alert-success"><%= flash[:success] %></div>
			<% end %>

	   	 
	   	<%= yield %>

   	</div>

  </body>
</html>
