<h1>
	<small>Order for</small> <%= @order_food_item %>
</h1>

<div class="row">
	<div class="col-sm-4">
		<%= form_for [@order, OrderFoodItem.new] do |f| %>
			<fieldset class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, class: 'form-control' %>
			</fieldset>

			<fieldset class="form-group">
				<%= f.label :phone %>
				<%= f.text_field :phone, class: 'form-control' %>
			</fieldset>

			<fieldset class="form-group">
				<%= f.label :address %>
				<%= f.text_area :address, class: 'form-control' %>
			</fieldset>

			<%= f.submit "Submit Order", class: 'btn btn-primary' %>

		<% end %>
	</div>
</div>